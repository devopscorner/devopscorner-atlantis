# ==========================================================================
#  888899990000 - TFState: backend.tf
# --------------------------------------------------------------------------
#  Description:
#    Store Terraform State to S3
# --------------------------------------------------------------------------
#    - S3 Bucket Path
#    - DynamoDB Table
# ==========================================================================

# --------------------------------------------------------------------------
#  Store Path for Terraform State
# --------------------------------------------------------------------------
terraform {
  backend "s3" {
    region         = "ap-southeast-3"
    bucket         = "tf-state-888899990000-ap-southeast-3"
    dynamodb_table = "ddb-tf-state-888899990000-ap-southeast-3"
    key            = "devopscorner/888899990000/tfstate/tfstate"
    encrypt        = true
  }
}
